{% extends "OlegTestBundle::base_view.html.twig" %}
{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ portfolio.title }}</h3>
        </div>
        <div class="panel-body">
            <p>
                {{ portfolio.content }}
                {{ dump(content) }}
            </p>
        </div>
        <div class="panel-footer">
           <a href="{{ url('portfolio_del', {'id': portfolio.id}) }}" class="btn btn-lg btn-success btn-block edit_button">Удалить</a>
        </div>
    </div>
{% endblock %}