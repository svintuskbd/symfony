{% extends 'OlegTestBundle::base_view.html.twig' %}
{% block content %}
     <nav class="navbar navbar-inverse">
        <a href="{{url('news_add')}}" class="btn btn-lg btn-success btn-block add_button">Добавить новую запись</a>
        {% include 'OlegTestBundle:News:search_form.html.twig' %}
    </nav>
    {% if search is defined %}
        {% for cont in search %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ cont.title }}</h3>
                </div>
                <div class="panel-body">
                    <p>
                        {{ cont.description }}
                    </p>
                </div>
                <div class="panel-footer">
                   <a href="{{url('news_view', { 'slug': cont.slug })}}" class="btn btn-lg btn-success btn-block edit_button">Просмотр</a>
                   <a href="{{url('news_edit', { 'slug': cont.slug })}}" class="btn btn-lg btn-success btn-block del_button">Редактировать</a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Записей не найдено</h3>
                </div>
                <div class="panel-body">
                    <p>
                        По запросу ничего не найдено
                    </p>
                </div>
                <div class="panel-footer">
{#                       <a href="{{url('news_view', { 'slug': cont.slug })}}" class="btn btn-lg btn-success btn-block edit_button">Просмотр</a>#}
{#                       <a href="{{url('news_edit', { 'slug': cont.slug })}}" class="btn btn-lg btn-success btn-block del_button">Редактировать</a>#}
                </div>
            </div>
    {% endif %}
{% endblock %}